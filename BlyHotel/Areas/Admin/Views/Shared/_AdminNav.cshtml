
@{
	Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">

	<title>Bly Hotel</title>
	<link rel="stylesheet" href="~/Areas/Admin/Data/rooms/admin.css">
	<link rel="stylesheet" href="~/Areas/Admin/Data/rooms/create.css" />
	<link rel="stylesheet" href="~/Areas/Admin/Data/rooms/edit.css" />
	<link rel="stylesheet" href="~/Areas/Admin/Data/rooms/detail.css" />
	<link rel="stylesheet" href="~/Areas/Admin/Data/rooms/delete.css" />
	<link rel="stylesheet" href="~/Assets/font/themify-icons-font/themify-icons/themify-icons.css">
	<link href="~/Content/PagedList.css" rel="stylesheet" />
	<!-- Custom fonts for this template-->
	<link href="~/Assets/font/fontawesome-free-6.2.0-web/css/all.min.css" rel="stylesheet" type="text/css">
	<!-- Custom styles for this template-->
	<link href="~/Areas/Admin/Data/rooms/sb-admin-2.min.css" rel="stylesheet">
	<link href="~/Areas/Admin/Data/rooms/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>

<body id="page-top">

	<!-- Page Wrapper -->
	<div id="wrapper">

		<!-- Sidebar -->
		<ul style="background-color:#36608a!important" class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

			<!-- Sidebar - Brand -->
			<a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
				<div class="sidebar-brand-icon rotate-n-15">
					<i class="fas fa-laugh-wink"></i>
				</div>
				<div class="sidebar-brand-text mx-3">Hello</div>
			</a>

			<!-- Divider -->
			<hr class="sidebar-divider my-0">

			<!-- Nav Item - Dashboard -->
			<li class="nav-item active">
				<a class="nav-link" href="index.html">
					<span>Trang chủ</span>
				</a>
			</li>

			<!-- Divider -->
			<hr class="sidebar-divider">

			<!-- Heading -->
			<div class="sidebar-heading">
				Quản lý hệ thống
			</div>

			<li class="nav-item">
				<a class="nav-link" href="/Admin/Room/getListRoom">
					<i class="fas fa-fw fa-chart-area"></i>
					<span>Loại phòng</span>
				</a>
			</li>

			<!-- Nav Item - Tables -->
			<li class="nav-item">
				<a class="nav-link" href="/Admin/Room/listReserveTicket">
					<i class="fas fa-fw fa-table"></i>
					<span>Danh sách đặt phòng</span>
				</a>
			</li>

			<!-- Nav Item - Tables -->
			<li class="nav-item">
				<a class="nav-link" href="/Admin/Customer/Index">
					<i class="ti-user"></i>
					<span>Khách hàng</span>
				</a>
			</li>
			<!-- Nav Item - Charts -->
			<li class="nav-item">
				<a class="nav-link" href="/Account/Logout" data-toggle="modal" data-target="#logoutModal" >
					<i class="ti-arrow-left"></i>
					<span>Đăng xuất</span>
				</a>
			</li>


			<!-- Sidebar Toggler (Sidebar) -->
			<div class="text-center d-none d-md-inline">
				<button class="rounded-circle border-0" id="sidebarToggle"></button>
			</div>
		</ul>
		<!-- End of Sidebar -->
		<!-- Content Wrapper -->
		<div id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				<!-- Topbar -->
				<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

					<!-- Sidebar Toggle (Topbar) -->
					<button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
						<i class="fa fa-bars"></i>
					</button>

					<!-- Topbar Search -->
					@using (Html.BeginForm("getListRoom", "Room", FormMethod.Post, new { @class = "form-inline" }))
					{
						<form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
							<div class="input-group">
								<input type="text" class="form-control bg-light border-0 small" name="searchString" placeholder="Nhập tên loại phòng"
									   aria-label="Search" aria-describedby="basic-addon2">
								<div class="input-group-append">
									<button class="btn btn-primary" type="submit">
										<i class="fas fa-search fa-sm"></i>
									</button>
								</div>
							</div>
						</form>
					}

					
						<!-- Topbar Navbar -->
						<ul class="navbar-nav ml-auto">

							<!-- Nav Item - Search Dropdown (Visible Only XS) -->
							<li class="nav-item dropdown no-arrow d-sm-none">
								<a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button"
								   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="fas fa-search fa-fw"></i>
								</a>
								<!-- Dropdown - Messages -->
								<div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in"
									 aria-labelledby="searchDropdown">
									<form class="form-inline mr-auto w-100 navbar-search">
										<div class="input-group">
											<input type="text" class="form-control bg-light border-0 small"
												   placeholder="Search for..." aria-label="Search"
												   aria-describedby="basic-addon2">
											<div class="input-group-append">
												<button class="btn btn-primary" style="background-color:#36608a!important" type="button">
													<i class="fas fa-search fa-sm"></i>
												</button>
											</div>
										</div>
									</form>
								</div>
							</li>


							<div class="topbar-divider d-none d-sm-block"></div>

							<!-- Nav Item - User Information -->
							<li class="nav-item dropdown no-arrow">
								<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
								   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<span class="mr-2 d-none d-lg-inline text-gray-600 small">Thanh Trúc</span>
									<img class="img-profile rounded-circle"
										 src="~/Assets/img/avtadmin.png">
								</a>
							</li>

						</ul>

					</nav>
				<!-- End of Topbar -->
				<!-- Begin Page Content -->

					@RenderBody()

				<!-- /.container-fluid -->
				
			</div>
			<!-- End of Main Content -->
			<!-- Footer -->
			<footer class="sticky-footer bg-white">
				<div class="container my-auto">
					<div class="copyright text-center my-auto">
						<span>Copyright &copy; Your Website 2021</span>
					</div>
				</div>
			</footer>
			<!-- End of Footer -->

		</div>
		<!-- End of Content Wrapper -->

	</div>
	<!-- End of Page Wrapper -->
	<!-- Scroll to Top Button-->
	<a class="scroll-to-top rounded" href="#page-top">
		<i class="fas fa-angle-up"></i>
	</a>

	<!-- Logout Modal-->
	<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
		 aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Đăng xuất ngay bây giờ?</h5>
					<button class="close" type="button" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>
				<div class="modal-body">Bạn muốn đăng xuất</div>
				<div class="modal-footer">
					<button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
					<a class="btn btn-primary" href="/Account/Logout">Logout</a>
				</div>
			</div>
		</div>
	</div>

	<!-- Bootstrap core JavaScript-->
	<script src="~/Areas/Admin/Data/js/jquery.min.js"></script>
	<script src="~/Areas/Admin/Data/js/bootstrap.bundle.min.js"></script>

	<!-- Core plugin JavaScript-->
	<script src="~/Areas/Admin/Data/js/jquery.easing.min.js"></script>

	<!-- Custom scripts for all pages-->
	<script src="~/Areas/Admin/Data/js/sb-admin-2.min.js"></script>
	<script src="~/Areas/Admin/Data/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/Areas/Admin/Data/js/jquery.dataTables.min.js"></script>

</body>

</html>
