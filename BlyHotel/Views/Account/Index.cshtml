@model BlyHotel.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-form">
	<div class="login-wrap">
		<div class="login-html">
			<div class="login-form">
				<div class="sign-in-label">Đăng nhập</div>
				<p class="account-warning">@ViewBag.error</p>
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="group">
						<label for="user" class="label">Tài khoản</label>
						@Html.TextBoxFor(model => model.Taikhoan, new
				   {
					   @class = "input",
					   @placeholder = "Tên tài khoản",
					   @autofocus = "autofocus",
					   @id = "user",
					   @required = true,
				   })
					@Html.ValidationMessageFor(model => model.Taikhoan, "", new { @class = "text-danger" })
					</div>
					<div class="group">
						<label for="pass" class="label">Mật khẩu</label>
						@Html.TextBoxFor(model => model.Matkhau, new
				   {
					   @class = "input",
					   @type = "password",
					   @placeholder = "Mật khẩu",
					   @id = "pass",
					   @required = true,
				   })
					@Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
					</div>
					<div class="group">
						@Html.CheckBoxFor(model => model.Rememberme, new { onchange = "this.value = this.checked;" })
						<label for="check" class="label-check"><span class="icon"></span> Ghi nhớ đăng nhập</label>
					</div>

					<div class="group">
						<input type="submit" class="btn-signin" value="Sign In">
					</div>
					<div class="hr"></div>
					<div class="foot-lnk">
						<a href="#forgot">Quên mật khẩu?</a> | <a href="/Account/Register">Đăng ký ngay</a>
					</div>
				}
			</div>
		</div>
	</div>
</div>

