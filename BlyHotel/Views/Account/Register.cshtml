@model BlyHotel.Models.RegisterModel

@{
	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/toastr.css" rel="stylesheet" />
<script src="~/Scripts/toastr.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
       if('@TempData["message"]' == "Success"){
          toastr.success('Đăng ký tài khoản thành công');
       }
	   else {
		   toastr.info('Đăng ký tài khoản thất bại');
	   }
    });
</script>


<div class="content-form">
	<div class="register-wrap">
		<div class="register-html">
			<div class="register-form">
				<div class="register-label">Đăng ký</div>
				@if (ViewBag.error != null)
				{<p class="account-warning">@ViewBag.error</p>}
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="group">
						<label for="name" class="label">Họ tên</label>
						@Html.TextBoxFor(model => model.Hoten, new
						{
							  @class = "input",
							  @placeholder = "Họ tên",
							  @autofocus = "autofocus",
							  @id = "name",
							  @required = true,
						 })
						@Html.ValidationMessageFor(model => model.Hoten, "", new { @class = "text-danger" })
					</div>

					<div class="group">
						<label for="user" class="label">Tài khoản</label>
						@Html.TextBoxFor(model => model.Taikhoan, new
						{
							  @class = "input",
							  @placeholder = "Tên tài khoản",
							  @autofocus = "autofocus",
							  @id = "user",
							  @required = true,
						 })
						@Html.ValidationMessageFor(model => model.Taikhoan, "", new { @class = "text-danger" })
					</div>

					<div class="group">
						<label for="pass" class="label">Mật khẩu</label>
						@Html.TextBoxFor(model => model.Matkhau, new
						{
							@class = "input",
							@type = "password",
							@placeholder = "Mật khẩu",
							@id = "pass",
							@required = true,
						})
						@Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
					</div>
					<div class="group">
						<label for="repass" class="label">Nhập lại mật khẩu</label>
						@Html.TextBoxFor(model => model.MatKhauNhapLai, new
						{
							@class = "input",
							@type = "password",
							@placeholder = "Nhập lại mật khẩu",
							@id = "repass",
							@required = true,
						})
						@Html.ValidationMessageFor(model => model.MatKhauNhapLai, "", new { @class = "text-danger" })
					</div>
					<div class="group">
						<input type="submit" class="btn-register" value="Register">
					</div>
					<div class="hr"></div>
					<div class="foot-lnk">
						<a href="/Account/Index">Đăng nhập ngay!</a>
					</div>
				}
			</div>
		</div>
	</div>
</div>

